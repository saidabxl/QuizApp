
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

<style name="LinearLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/padding4</item>
</style>

<style name="Textone">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">@dimen/marginbottom2</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:layout_gravity">center</item>
</style>

<style name="view">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/button_tint</item>
    <item name="android:padding">@dimen/padding3</item>
</style>

<style name="image">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">166dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:padding">@dimen/padding1</item>
   <item name="android:src">@drawable/africa</item>
</style>

<style name="texttwo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:padding">@dimen/padding2</item>
    <item name="android:layout_marginBottom">@dimen/margin1</item>
    <item name="android:text">@string/start</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">18sp</item>
</style>

<style name="textthree">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:padding">@dimen/padding2</item>
    <item name="android:textSize">18sp</item>
    <item name="android:text">@string/nameQuestions</item>
</style>

 <style name="edittext">
     <item name="android:layout_width">200dp</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_gravity">center_horizontal</item>
     <item name="android:layout_marginBottom">@dimen/padding3</item>
     <item name="android:gravity">center</item>
     <item name="android:inputType">textCapSentences</item>
     <item name="android:text">@string/nameHint</item>
     <item name="android:textColor">@color/text</item>
     <item name="android:backgroundTint" tools:ignore="NewApi">@color/button_tint</item>
 </style>

<style name="text">

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/backgroundcolor</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/padding2</item>
    <item name="android:textSize">18sp</item>
</style>

<style name="radiogroup">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginBottom">@dimen/margin1</item>
    <item name="android:orientation">vertical</item>
    <item name="android:textSize">18sp</item>
</style>

<style name="radiobutton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:buttonTint" tools:ignore="NewApi">@color/button_tint</item>
</style>

<style name="Linearlayouttwo">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:orientation">vertical</item>
</style>

<style name="checkbox">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:buttonTint" tools:ignore="NewApi">@color/button_tint</item>
    <item name="android:textColor">@color/text</item>
</style>

<style name="button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">@dimen/margin_top</item>
    <item name="android:text">@string/checkAnswers</item>



</style>

</resources>